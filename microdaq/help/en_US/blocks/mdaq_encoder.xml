    <refnamediv>
        <refname>mdaq_encoder</refname>
        <refpurpose>
		
		Reads MicroDAQ quadrature encoder
		
		</refpurpose>
    </refnamediv>
    <refsection>
        <title>Block Screenshot</title>
        <para>
            <inlinemediaobject>
                <imageobject>
